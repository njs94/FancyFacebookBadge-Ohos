<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center">

    <com.shashank.sony.fancyfacebookbadgelib.FacebookNotificationBadge
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:id="$+id:badge"
        ohos:bottom_padding="20fp"/>

    <com.shashank.sony.fancyfacebookbadgelib.FacebookNotificationBadge
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:id="$+id:badge1"
        ohos:bottom_padding="20fp"/>

    <com.shashank.sony.fancyfacebookbadgelib.FacebookNotificationBadge
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:id="$+id:badge2"
        ohos:bottom_padding="20fp"/>

    <com.shashank.sony.fancyfacebookbadgelib.FacebookNotificationBadge
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:id="$+id:badge3"
        ohos:bottom_padding="20fp"/>

    <com.shashank.sony.fancyfacebookbadgelib.FacebookNotificationBadge
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:id="$+id:badge4"
        ohos:bottom_padding="20fp"/>

    <com.shashank.sony.fancyfacebookbadgelib.FacebookNotificationBadge
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:id="$+id:badge5"
        ohos:bottom_padding="20fp"/>

    <Button
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:id="$+id:button1"
        ohos:text_size="40fp"
        ohos:text_color="#FFFF0000"
        ohos:element_bottom="$id:button2"
        ohos:text="Increase"/>

    <Button
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:id="$+id:button2"
        ohos:text_size="40fp"
        ohos:text_color="#FFFF0000"
        ohos:text="Clear"/>


</DirectionalLayout>